<% provide(:title, 'Events') %>
<table class="teble">
  <thead>
    <tr>
      <% t('date.abbr_day_names').each do |day_name| %>

          <th class="header1"><%= day_name %></th>

      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @calendar_data.each do |date| %>
      <% if date.wday == 0 %>
        <tr>
      <% end %>
      <td>
        <%= date.day %>
      </td>
      <% if date.wday == 6 %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<p><%= @today.strftime("< %m / %Y >") %></p>
