<li id="messages-<%= message.id %>">
  <%= link_to gravatar_for(message.user, size: 50), message.user %>
  <span class="user"><%= link_to message.user.name, message.user %></span>

  <span class="content"><%= message.content %></span>


  <span class="timestamp">
    <%= time_ago_in_words(message.created_at) %>前
  </span>
</li>
