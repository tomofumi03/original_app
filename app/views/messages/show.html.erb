<div class="center jumbotron">
  <% provide(:title, 'Messages') %>
  <h1>ダイレクトメッセージ</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= render 'shared/message_form' %>
    </div>
  </div>
   <% if @user.messages.any? %>
     <h3>(<%= @user.messages.count %>)</h3>
     <ol class="messages">
       <%= render @messages %>
     </ol>
   <% end %>

 </div>
