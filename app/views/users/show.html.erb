<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <% if @user == current_user%>
        <%= link_to "編集する", edit_user_path(current_user) %>
      <% end %>

    </section>
  </aside>
</div>
